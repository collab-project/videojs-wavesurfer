{
  "name": "videojs-wavesurfer",
  "version": "2.3.1",
  "description": "video.js plugin that adds a navigable waveform for audio and video files.",
  "author": "Collab",
  "license": "MIT",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/collab-project/videojs-wavesurfer/issues"
  },
  "homepage": "https://github.com/collab-project/videojs-wavesurfer",
  "main": "dist/videojs.wavesurfer.min.js",
  "directories": {
    "doc": "./docs",
    "lib": "./src",
    "example": "./examples",
    "test": "./test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/collab-project/videojs-wavesurfer.git"
  },
  "scripts": {
    "clean": "rimraf dist docs",
    "build": "npm run clean && npm run build:dev && npm run build:min && npm run build:css",
    "build:main": "webpack --config ./build-config/webpack.dev.main.js",
    "build:main:min": "webpack --config ./build-config/webpack.prod.main.js",
    "build:dev": "npm run build:main",
    "build:min": "npm run build:main:min",
    "build:css": "npm-run-all -s build:css:sass build:css:compress build:css:banner",
    "build:css:sass": "node-sass --include-path src/css src/css/videojs.wavesurfer.scss dist/css/videojs.wavesurfer.css",
    "build:css:compress": "cleancss -o dist/css/videojs.wavesurfer.min.css dist/css/videojs.wavesurfer.css",
    "build:css:banner": "replace-in-file LIB_VERSION $npm_package_version dist/css/videojs.wavesurfer*.css",
    "docs": "npm-run-all docs:*",
    "docs:api": "jsdoc src/js -r -d docs/api",
    "lint": "npm-run-all lint:*",
    "lint:js": "jscs --config .jscsrc src",
    "lint:html": "htmlhint examples",
    "start": "npm run build && webpack-dev-server --config ./build-config/webpack.dev.main.js",
    "test": "karma start karma.conf.js",
    "prepublishOnly": "not-in-install && npm run build || in-install"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "keywords": [
    "waveform",
    "audio",
    "video",
    "wavesurfer",
    "videojs",
    "videojs-plugin",
    "player"
  ],
  "dependencies": {
    "video.js": ">=6.0.0",
    "wavesurfer.js": ">=2.0.3"
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "clean-css-cli": "^4.1.11",
    "htmlhint": "^0.9.13",
    "in-publish": "^2.0.0",
    "jasmine-core": "^3.1.0",
    "jscs": "^3.0.7",
    "jsdoc": "^3.5.5",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coveralls": "^1.2.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-host-environment": "^1.1.3",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-matchers": "^3.7.0",
    "karma-verbose-reporter": "0.0.6",
    "karma-webpack": "^4.0.0-beta.0",
    "moment": "^2.22.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "replace-in-file": "^3.4.0",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2",
    "webrtc-adapter": "^6.1.5"
  }
}
