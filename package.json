{
  "name": "videojs-wavesurfer",
  "version": "2.2.2",
  "description": "video.js plugin that adds a navigable waveform for audio and video files.",
  "author": "Collab",
  "license": "MIT",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/collab-project/videojs-wavesurfer/issues"
  },
  "homepage": "https://github.com/collab-project/videojs-wavesurfer",
  "main": "dist/videojs.wavesurfer.min.js",
  "directories": {
    "doc": "./docs",
    "lib": "./src",
    "example": "./examples",
    "test": "./test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/collab-project/videojs-wavesurfer.git"
  },
  "scripts": {
    "build": "npm run build:normal && npm run build:minified",
    "build:main": "webpack --config ./build-config/webpack.prod.main.js",
    "build:main:min": "webpack --config ./build-config/webpack.prod.main.min.js",
    "build:normal": "npm run build:main",
    "build:minified": "npm run build:main:min",
    "start": "npm run build:main && webpack-dev-server --config ./build-config/webpack.dev.main.js",
    "docs": "npm-run-all docs:*",
    "docs:api": "jsdoc src/js -r -d docs/api",
    "lint": "npm-run-all lint:*",
    "lint:js": "jscs --config .jscsrc src",
    "lint:html": "htmlhint examples",
    "release:zip": "node scripts/release-zip.js",
    "test": "karma start karma.conf.js",
    "prepublish": "not-in-install && npm run build || in-install"
  },
  "files": [
    ".babelrc",
    ".jscsrc",
    "dist/",
    "es5",
    "src/",
    "test/",
    "scripts/"
  ],
  "keywords": [
    "waveform",
    "audio",
    "video",
    "wavesurfer",
    "videojs",
    "videojs-plugin",
    "player"
  ],
  "browserify-shim": {
    "qunit": "global:QUnit",
    "video.js": "global:videojs",
    "wavesurfer.js": "global:WaveSurfer"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "dependencies": {
    "video.js": ">=6.0.0",
    "wavesurfer.js": ">=2.0.3"
  },
  "devDependencies": {
    "add-banner": "^0.1.0",
    "argv-auto-glob": "^1.0.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-define": "^1.3.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "16",
    "browserify-banner": "^1.0.7",
    "browserify-shim": "^3.8.14",
    "bundle-collapser": "^1.3.0",
    "clean-css-cli": "^4.1.11",
    "connect": "^3.6.6",
    "copy-dir": "^0.3.0",
    "del": "^3.0.0",
    "download-tarball": "^1.1.0",
    "htmlhint": "^0.9.13",
    "in-publish": "^2.0.0",
    "jasmine-core": "^3.1.0",
    "jscs": "^3.0.7",
    "jsdoc": "^3.5.5",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.1",
    "karma-jasmine-matchers": "^3.7.0",
    "karma-qunit": "^2.0.1",
    "karma-webpack": "^3.0.0",
    "moment": "^2.21.0",
    "mv": "^2.1.1",
    "node-sass": "^4.8.3",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "portscanner": "^2.1.1",
    "qunit": "^2.5.1",
    "replace": "^0.3.0",
    "serve-static": "^1.13.2",
    "shelljs": "^0.8.1",
    "uglify-js": "3",
    "webpack": "3",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.2",
    "webpack-replace": "^1.0.0",
    "webrtc-adapter": "^6.1.4",
    "zip-dir": "^1.0.2"
  }
}
